<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SyncMP3App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SyncMP3App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SyncMP3App">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".20*" />
            <ColumnDefinition Width=".40*" />
            <ColumnDefinition Width=".40*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="AddFolder" Command="{Binding FolderPickerCommand}"/>

            <Button Content="Update" Command="{Binding UpdateCommand}" />
            <Button Content="Join" Command="{Binding JoinCommand}" />

        </StackPanel>
        <TextBlock x:Name="TextBlockA" Grid.Column="1" Text="{Binding TextBlockAText}"/>

        <TextBlock Grid.Column="2" Text="BBBBB"/>
    </Grid>

</Window>
